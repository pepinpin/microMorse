<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_main"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="net.biospherecorp.umorse.MainActivity"
	android:orientation="vertical"
	android:weightSum="1">


	<EditText
		android:id="@+id/resultTextView"
		android:background="@drawable/inactive_text_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="150dp"
		android:maxHeight="300dp"
		android:gravity="top"

		android:hint="@string/translated_text"
		android:inputType="textMultiLine|textNoSuggestions"
		android:textIsSelectable="true"
		android:textSize="14sp"

		android:scrollbars="vertical"

		android:paddingTop="@dimen/textview_vertical_padding"
		android:paddingBottom="@dimen/textview_vertical_padding"

		android:paddingLeft="@dimen/textview_horizontal_padding"
		android:paddingStart="@dimen/textview_horizontal_padding"

		android:paddingRight="@dimen/textview_horizontal_padding"
		android:paddingEnd="@dimen/textview_horizontal_padding"

		android:layout_marginTop="@dimen/activity_vertical_margin"

		android:layout_marginStart="@dimen/activity_horizontal_margin"
		android:layout_marginLeft="@dimen/activity_horizontal_margin"

		android:layout_marginEnd="@dimen/activity_horizontal_margin"
		android:layout_marginRight="@dimen/activity_horizontal_margin"

		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		/>

	<view
		android:id="@+id/dot_button"
		class="ru.katso.livebutton.LiveButton"

		android:layout_width="70dp"
		android:layout_height="70dp"

		android:text="."
		android:textColor="@color/colorAccent"
		android:textStyle="bold"
		android:textSize="70sp"

		app:corners="20dp"
		app:normalHeight="6dp"
		app:pressedHeight="2dp"
		app:backgroundColor="@color/colorPrimary"
		app:shadowColor="@color/colorPrimaryDark"

		android:layout_marginTop="47dp"
		android:layout_marginLeft="33dp"
		android:layout_marginStart="33dp"

		android:layout_below="@+id/resultTextView"
		android:layout_alignLeft="@+id/space_button"
		android:layout_alignStart="@+id/space_button"
		android:layout_centerHorizontal="true"

		/>

	<view
		android:id="@+id/dash_button"
		class="ru.katso.livebutton.LiveButton"

		android:layout_width="70dp"
		android:layout_height="70dp"

		android:text="-"
		android:textColor="@color/colorAccent"
		android:textStyle="bold"
		android:textSize="70sp"

		app:corners="20dp"
		app:normalHeight="6dp"
		app:pressedHeight="2dp"
		app:backgroundColor="@color/colorPrimary"
		app:shadowColor="@color/colorPrimaryDark"

		android:layout_marginRight="30dp"
		android:layout_marginEnd="30dp"

		android:layout_alignTop="@+id/dot_button"
		android:layout_alignRight="@+id/space_button"
		android:layout_alignEnd="@+id/space_button"
		android:layout_alignBottom="@+id/dot_button"

		android:layout_centerHorizontal="true"
		/>

	<view
		android:id="@+id/space_button"
		class="ru.katso.livebutton.LiveButton"

		android:layout_width="match_parent"
		android:layout_height="80dp"

		android:text="@string/space_button_text"
		android:textColor="@color/colorPrimary"
		android:textSize="14sp"
		android:textStyle="bold"

		app:corners="20dp"
		app:normalHeight="6dp"
		app:pressedHeight="2dp"
		app:backgroundColor="@color/colorAccent"
		app:shadowColor="@color/colorPrimaryDark"

		android:includeFontPadding="false"

		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="-140dp"

		android:layout_alignBottom="@+id/dash_button"
		android:layout_centerHorizontal="true"
		/>

	<TextView
		android:id="@+id/textView"
		android:text="@string/space_text"

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"

		android:layout_marginBottom="-60dp"
		android:layout_alignBottom="@+id/space_button"
		/>


</RelativeLayout>
