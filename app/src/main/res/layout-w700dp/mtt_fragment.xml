<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_main"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="net.biospherecorp.umorse.MainActivity"
	android:orientation="vertical"
	android:weightSum="1">


	<EditText
		android:id="@+id/resultTextView"
		android:background="@drawable/inactive_text_view"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:minHeight="150dp"
		android:maxHeight="300dp"
		android:gravity="top"

		android:hint="@string/translated_text"
		android:inputType="textMultiLine|textNoSuggestions"
		android:textIsSelectable="true"
		android:textSize="14sp"

		android:scrollbars="vertical"

		android:paddingTop="@dimen/textview_vertical_padding"
		android:paddingBottom="@dimen/textview_vertical_padding"

		android:paddingLeft="@dimen/textview_horizontal_padding"
		android:paddingStart="@dimen/textview_horizontal_padding"

		android:paddingRight="@dimen/textview_horizontal_padding"
		android:paddingEnd="@dimen/textview_horizontal_padding"

		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		android:layout_marginLeft="128dp"
		android:layout_marginStart="128dp"
		app:layout_constraintTop_toTopOf="@+id/activity_main"
		android:layout_marginTop="40dp"
		app:layout_constraintRight_toRightOf="@+id/activity_main"
		android:layout_marginRight="128dp"
		android:layout_marginEnd="128dp"
		app:layout_constraintHorizontal_bias="1.0"/>

	<view
		android:id="@+id/dot_button"
		class="ru.katso.livebutton.LiveButton"

		android:layout_width="90dp"
		android:layout_height="90dp"

		android:text="."
		android:textColor="@color/colorAccent"
		android:textStyle="bold"
		android:textSize="70sp"

		app:corners="20dp"
		app:normalHeight="6dp"
		app:pressedHeight="2dp"
		app:backgroundColor="@color/colorPrimary"
		app:shadowColor="@color/colorPrimaryDark"

		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		android:layout_marginLeft="64dp"
		android:layout_marginStart="64dp"
		app:layout_constraintTop_toBottomOf="@+id/resultTextView"
		android:layout_marginTop="48dp"/>

	<TextView
		android:id="@+id/delButton"
		android:text="del"
		android:textColor="@color/delButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:paddingTop="@dimen/textview_vertical_padding"
		android:paddingBottom="@dimen/textview_vertical_padding"

		android:paddingLeft="@dimen/textview_horizontal_padding"
		android:paddingStart="@dimen/textview_horizontal_padding"

		android:paddingRight="@dimen/textview_horizontal_padding"
		android:paddingEnd="@dimen/textview_horizontal_padding"


		app:layout_constraintRight_toRightOf="@+id/resultTextView"
		android:layout_marginRight="240dp"
		android:layout_marginEnd="240dp"
		tools:layout_constraintRight_creator="1"
		app:layout_constraintBottom_toBottomOf="@+id/resultTextView"
		tools:layout_constraintBottom_creator="1"/>

	<view
		android:id="@+id/dash_button"
		class="ru.katso.livebutton.LiveButton"

		android:layout_width="90dp"
		android:layout_height="90dp"

		android:text="-"
		android:textColor="@color/colorAccent"
		android:textStyle="bold"
		android:textSize="70sp"

		app:corners="20dp"
		app:normalHeight="6dp"
		app:pressedHeight="2dp"
		app:backgroundColor="@color/colorPrimary"
		app:shadowColor="@color/colorPrimaryDark"

		app:layout_constraintTop_toBottomOf="@+id/resultTextView"
		android:layout_marginTop="48dp"
		app:layout_constraintRight_toRightOf="@+id/activity_main"
		android:layout_marginRight="64dp"
		android:layout_marginEnd="64dp"/>

	<view
		android:id="@+id/space_button"
		class="ru.katso.livebutton.LiveButton"

		android:layout_width="0dp"
		android:layout_height="80dp"

		android:text="@string/space_button_text"
		android:textColor="@color/colorPrimary"
		android:textSize="14sp"
		android:textStyle="bold"

		app:corners="20dp"
		app:normalHeight="6dp"
		app:pressedHeight="2dp"
		app:backgroundColor="@color/colorAccent"
		app:shadowColor="@color/colorPrimaryDark"

		android:includeFontPadding="false"

		app:layout_constraintLeft_toRightOf="@+id/dot_button"
		app:layout_constraintTop_toBottomOf="@+id/resultTextView"
		android:layout_marginTop="56dp"
		android:layout_marginLeft="64dp"
		android:layout_marginStart="64dp"
		android:layout_marginRight="64dp"
		android:layout_marginEnd="64dp"
		app:layout_constraintRight_toLeftOf="@+id/dash_button"
		app:layout_constraintHorizontal_bias="0.59"/>

	<TextView
		android:id="@+id/textView"
		android:text="@string/space_text"

		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:gravity="center"

		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintTop_toBottomOf="@+id/space_button"
		android:layout_marginTop="24dp"
		app:layout_constraintRight_toRightOf="@+id/activity_main"
		android:layout_marginRight="16dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintHorizontal_bias="0.46"/>


</android.support.constraint.ConstraintLayout>
